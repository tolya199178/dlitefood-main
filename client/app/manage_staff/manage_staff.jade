#wrapper
  div(ng-include="'components/navbar/navbar.html'")

  #page-wrapper.gray-bg(class='~$state.current.name~')
    div(ng-include="'components/topbar/topbar.html'")

    // Main content here
    .row.wrapper.border-bottom.white-bg.page-heading
      .col-lg-10
        h2.bold  Staff Management
        ol.breadcrumb
          li
            a(href='/dashboard') Dashboard
          li
            a(href='/staff') Staff
          li.active
            a(href='/manage_staff')
            strong Manage Staff
      .col-lg-2
    .wrapper.wrapper-content.animated.fadeIn
      .row
        .col-lg-10
         .ibx-content
           .search-form
             form(
               novalidate,
               role="form"
              )


      .tabs-container
          tabset
            tab(heading="Add New Driver")
              .panel-body
                div(data-ng-include="'app/manage_staff/subviews/add_staff_form.html'")
            tab(heading="Browse All Drivers")
              .panel-body
                div(data-ng-include="'app/manage_staff/subviews/browse_staff_table.html'")
            tab(heading="Each Driver's Order")
              .panel-body
                div(data-ng-include="'app/manage_staff/subviews/each_staff_order.html'")
            tab(heading="All Orders")
              .panel-body
                strong include all orders

    div(ng-include="'components/footer/footer.html'")
