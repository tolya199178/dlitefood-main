nav.navbar-default.navbar-static-side(role='navigation', ng-controller="NavbarCtrl")
  .sidebar-collapse

    ul#side-menu.nav.metismenu(side-navigation='')
      li.nav-header
        span
          img.img-circle(style="width: 48px; height: 48px;",alt='image', src='http://res.cloudinary.com/dy4lucetl/image/upload/v1441204721/dliteme_v6fsui.jpg')
        .dropdown.profile-element(dropdown='')
          a.dropdown-toggle(dropdown-toggle='', href='')
            span.clear
              span.block.m-t-xs
                strong.font-bold DLite Admin
              span.text-muted.text-xs.block
                | Administrator
        .logo-element
          img(src='../assets/img/a1.jpg')
      li(ng-class="{active: $state.includes('dashboard')}")
        a(ui-sref='dashboard')
          i.fa.fa-th-large
          span.nav-label {{ 'Dashboard'}}

      li(ng-class="{active: $state.includes('tracker')}")
        a(ui-sref='tracker.map')
          i.fa.fa-motorcycle
          span.nav-label {{ 'Tracker' }}

      li(ng-class="{active: $state.includes('manage-staff')}")
        a(ui-sref='manage-staff')
          i.fa.fa-users
          span.nav-label {{ 'Manage Staff'}}

      li(ng-class="{active: $state.includes('users')}")
        a(ui-sref='users')
          i.fa.fa-group
          span.nav-label {{ 'Users'}}
      li(ng-class="{active: $state.includes('orders')}")
        a(ui-sref="orders")
          i.fa.fa-cubes
          span.nav-label {{ 'Orders' }}
      li(ng-class="{active: $state.includes('merchants')}")
        a(ui-sref='merchants')
          i.fa.fa-th-large
          span.nav-label {{ 'Merchants' }}
          span.fa.arrow
        ul.nav.nav-second-level.collapse(ng-class="{in: $state.includes('merchants')}")
          li(ng-class="{active: $state.includes('merchants-items')}")
            a(ui-sref="merchants-items")
              i.fa.fa-briefcase
              span.nav-label {{ 'Items' }}
          li(ng-class="{active: $state.includes('merchants-category')}")
            a(ui-sref="merchants-category")
              i.fa.fa-cube
              span.nav-label {{'Categories'}}
          li(ng-class="{active: $state.includes('merchants-meal')}")
            a(ui-sref="merchants-items")
              i.fa.fa-database
              span.nav-label {{'Sides'}}

      li(ng-class="{active: $state.includes('settings')}")
        a(ui-sref="settings")
          i.fa.fa-cogs
          span.nav-label {{ 'Settings' }}
